<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.4" method="upgrade">
    <name>com_cedyahooweather</name>
    <creationDate>2016-12-31</creationDate>

    <author>Galaxiis</author>
    <authorEmail>galaxiiscom@gmail.com</authorEmail>
    <authorUrl>www.galaxiis.com</authorUrl>

    <version>1.4.2</version>

    <copyright>Copyright (C) 2013-2016 galaxiis.com All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL 3.0</license>

    <description>CedYahooWeather uses the Yahoo Weather feed data to display selected city latest weather forecasts. Get your favorite city weather in a widget. Very easy to customize and support multi-widget.</description>

    <files folder="components/com_cedyahooweather">
        <file>index.html</file>
    </files>

    <languages folder="language/en-GB">
        <language tag="en-GB">en-GB.com_cedyahooweather.ini</language>
    </languages>

    <media destination="com_cedyahooweather" folder="media/com_cedyahooweather">
        <folder>css</folder>
        <folder>images</folder>
        <filename>index.html</filename>
    </media>

    <administration>
        <menu link="option=com_cedyahooweather">CedYahooWeather</menu>
        <submenu>
            <menu view="liveupdate" img="../media/com_cedyahooweather/images/live-update.png">Live Update</menu>
        </submenu>

        <files folder="administrator/components/com_cedyahooweather">
            <folder>views</folder>
            <folder>helpers</folder>
            <folder>liveupdate</folder>
            <filename>config.xml</filename>
            <file>cedyahooweather.php</file>
            <file>controller.php</file>
            <file>index.html</file>
        </files>
        <languages folder="administrator/language/en-GB">
            <language tag="en-GB">en-GB.com_cedyahooweather.ini</language>
        </languages>
    </administration>

</extension>